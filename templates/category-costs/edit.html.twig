{% extends 'layout.html.twig' %}

{% block content %}
	<!--Essa página será importada dentro do layout-->
	<!--Fazemos isso com o comando extends do twig-->
	<div class="container">
		<div class="row">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">Editar de categoria de custo</h3>
				</div>
				<div class="panel-body">
					<form method="post" action="{{route('category-costs.update',{'id':category.id})}}">
						<div class="form-group">
							<label for="nome">Nome:</label>
							<input class="form-control" type="text" placeholder="nome" name="name" value="{{ category.name }}">
						</div>
						<button type="submit" class="btn btn-primary btn-block">
							<span class="glyphicon glyphicon-floppy-disk"></span>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>

<!-- Delimita o fim do bloco a ser importado-->
{% endblock %}